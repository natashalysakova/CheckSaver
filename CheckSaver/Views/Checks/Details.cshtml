@using CheckSaver.Models.DetailsModels
@model CheckSaver.Models.DetailsModels.CheckDetailsModel

@{
    ViewBag.Title = "Details";
}

<script>
    $('.navbar-brand')[0].innerHTML += 'Подробно - @Model.Date.ToString("D")';
</script>

    <div class="col-xs-12 col-sm-10 col-md-8 col-lg-6 col-sm-offset-1 col-md-offset-2 col-lg-offset-3 card card-big ">
    @if (Model.Store.Logo != null)
    {
        <img src="@Model.Store.Logo" class="store-logo store-logo-big" />
    }
    <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
        <h2>@Html.DisplayFor(model => model.Payer)</h2>

    </div>


        <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12 bottom-bordered">
            <h2>Список покупок</h2>

            @foreach (CheckDetailsModel.PurchaseDetailModel s in Model.PurchasesList)
            {
                <div class="col-md-12 col-lg-12 col-sm-12 col-xs-12 check-hovered" data-toggle="collapse" href="#@s.Id" aria-expanded="false" aria-controls="@s.Id">
                    <div class="col-md-8 col-lg-8 col-sm-8 col-xs-8 item-title">
                        <div class="text-center">
                            <div class="item-price">@s.Count.ToString("##.000") X @s.Price.ToString("C")</div>
                        </div>
                        @s.Title
                    </div>
                    <div class="col-md-4 col-lg-4 col-sm-4 col-xs-4 item-sum text-right">@s.Summa.ToString("C")</div>
                </div>
                <div class="collapse col-md-12 col-lg-12 col-sm-12 col-xs-12" id="@s.Id">
                    <div class="well">
                        @Html.DisplayFor(model => s.Summary)
                        @Html.DisplayFor(model => s.PricePerPerson)
                    </div>
                </div>
            }
        </div>
        <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                <div class=" col-md-4 col-md-offset-8 col-lg-4 col-lg-offset-8 col-sm-4 col-sm-offset-8 col-xs-4 col-xs-offset-8 item-sum text-right">
                    @Model.Summa.ToString("C")
                </div>
            <div class="col-md-12 col-lg-12 col-sm-12 col-xs-12">

                <h2>Итого</h2>
                @foreach (var s in Model.TotalList)
                {
                    <div>@Html.DisplayFor(model => s)</div>
                }
            </div>
        </div>
</div>



<script> setRandomBackground();</script>

