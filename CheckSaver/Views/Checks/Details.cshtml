@model CheckSaver.Models.DetailsModels.CheckDetailsModel

@{
    ViewBag.Title = "Details";
}



<h2>Details</h2>

<div>


    <h4>Check</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Date)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Date)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Summa)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Summa)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Payer)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Payer)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Store)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Store)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.TotalList)
        </dt>
        @foreach (var s in Model.TotalList)
        {
            <dd>
                @Html.DisplayFor(model => s)
            </dd>
        }

        <dt>
            @Html.DisplayNameFor(model => model.PurchasesList)
        </dt>
    </dl>

    <table class="table table-bordered">
        <tr>
            <th>@Html.DisplayNameFor(model => model.PurchasesList[0].Title)</th>
            <th>@Html.DisplayNameFor(model => model.PurchasesList[0].Price)</th>
            <th>@Html.DisplayNameFor(model => model.PurchasesList[0].Count)</th>
            <th>@Html.DisplayNameFor(model => model.PurchasesList[0].Summa)</th>
            <th>@Html.DisplayNameFor(model => model.PurchasesList[0].Summary)</th>
            <th>@Html.DisplayNameFor(model => model.PurchasesList[0].PricePerPerson)</th>
        </tr>
        @foreach (var s in Model.PurchasesList)
        {
            <tr>
                <td>@Html.DisplayFor(model => s.Title)</td>
                <td>@Html.DisplayFor(model => s.Price)</td>
                <td>@Html.DisplayFor(model => s.Count)</td>
                <td>@Html.DisplayFor(model => s.Summa)</td>
                <td>@Html.DisplayFor(model => s.Summary)</td>
                <td>@Html.DisplayFor(model => s.PricePerPerson)</td>
            </tr>
        }
    </table>



</div>
<p>
    @Html.ActionLink("Back to List", "Index")
</p>

