@using System.Collections.Generic
@using System.Linq
@using System.Web.Caching
@using CheckSaver.Models
@using CheckSaver.Models.DetailsModels
@*@model CheckSaver.Models.DetailsModels.CheckDetailsModel*@
@model CheckSaver.Models.Check

@{
    ViewBag.Title = "Details";
}

<script>
    $('.navbar-brand')[0].innerHTML += 'Подробно - @Model.DateTime.ToString("D")';
</script>
<div class="container">
    <div class="col-xs-12 col-sm-12 col-md-10 col-lg-8 col-md-offset-1 col-lg-offset-2 card card-big">
        <div class="card-image" style="background: url(@Model.Store.Logo); background-size: cover; background-position: center center;"></div>
        <div class="card-neighbour-photo img-circle" style="background-image: url(@Model.Neighbor.Photo); bottom: 170px; left: 24px; position: absolute;"></div>

        <div class="card-big-title">
            <div class="main-title">Список покупок </div>
            <div class="sub-title">@Model.Store.Title - @Model.Store.Address (@Model.DateTime.ToString("d"))</div>
        </div>

        <div class="card-action">
            <a href="@Url.Action("Edit", "Checks", new {id = Model.Id})">
                <div class="card-flat-button">Редактировать</div>
            </a>
            <a href="@Url.Action("Delete", "Checks", new {id = Model.Id})">
                <div class="card-flat-button delete-button">Удалить</div>
            </a>
        </div>
    </div>
    @foreach (Purchase s in Model.Purchase)
    {
        <div class="col-xs-12 col-sm-12 col-md-10 col-lg-8 col-md-offset-1 col-lg-offset-2 card card-big card-collapsed check-hovered" id="@s.Id"
             onclick="DetailedInfo(@s.Id, '@s.Product.Name' ); ">
            <div class=" short-info">
                <div class="col-md-8 col-lg-8 col-sm-8 col-xs-8 item-title">
                    <div class="text-center">
                        <div class="item-price">@s.Count.ToString("##.000") X @s.Product.Price.ToString("C")</div>
                    </div>
                    @s.Product.Name
                </div>
                <div class="col-md-4 col-lg-4 col-sm-4 col-xs-4 item-sum text-right">@s.Summa.ToString("C")</div>
            </div>
            <div class="loader8" id="progress-@s.Id"></div>

            <div class="detailed-info">

                <div class="detailed-card-img">
                    <img id="img-@s.Id">
                </div>

                <div class="card-collapsed-title">
                    <div class="main-title">
                        @s.Product.Name
                    </div>
                    <div class="sub-title">@s.Count.ToString("##.000") X @s.Product.Price.ToString("C")</div>
                </div>

                <div class="card-sub-title">Сумма: @s.Summa.ToString("C")</div>

                <div class="card-sub-title sub-title">Кто платит:</div>
                @foreach (Currency variable in s.Currency)
                {
                    <div class="card-neighbour-photo img-circle" style="background-image: url(@variable.Neighbor.Photo);"></div>
                }
                <div class="card-sub-title sub-title">Сколько платит:</div>
                <div>@s.Currency.First().CurrencyPrice.ToString("C")</div>

            </div>
        </div>
    }

    <div class="col-xs-12 col-sm-12 col-md-10 col-lg-8 col-md-offset-1 col-lg-offset-2 card card-big">
        <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
            <div class="col-md-6 col-md-offset-6 col-lg-6 col-lg-offset-6 col-sm-6 col-sm-offset-6 col-xs-6 col-xs-offset-6 item-sum text-right">
                <div class="total-summ">
                    Сумма @Model.Summ.ToString("C")
                </div>
            </div>
            <div class="col-md-12 col-lg-12 col-sm-12 col-xs-12 summary">

                <div class="main-title">К оплате</div>
                @foreach (var summa in ViewBag.Summary)
                {
                    <div class="col-md-12 col-lg-12 col-sm-12 col-xs-12">
                        <div class="col-md-2 col-lg-2 col-sm-2 col-xs-2">
                            <div class="card-neighbour-photo card-neighbour-photo-small img-circle" style="background-image: url(@summa.Key.Photo);"></div>
                        </div>
                        <div class="col-md-10 col-lg-10 col-sm-10 col-xs-10">
                            <div class="main-title summary-price-title">@summa.Value.ToString("C")</div>

                        </div>

                    </div>
                }

            </div>
        </div>
    </div>
</div>
