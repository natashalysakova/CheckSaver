@model IEnumerable<CheckSaver.Models.Transactions>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>

@foreach(var credit in ViewBag.Credits)
{
    <p>@credit</p>
}


<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Summa)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Caption)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Date)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IsDebitOff)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.WhoPayNP.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ForWhomNP.Name)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Summa)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Caption)
            @if(item.CheckId!= null)
            {
                @Html.ActionLink("Посмотреть чек", "Details", "Checks", new { id = item.CheckId }, new { })
            }
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Date)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.IsDebitOff)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.WhoPayNP.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ForWhomNP.Name)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
