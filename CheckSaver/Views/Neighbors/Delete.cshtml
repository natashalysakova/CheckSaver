@model CheckSaver.Models.Neighbours

@{
    ViewBag.Title = "Delete";
}
<script>
    $('.navbar-brand')[0].innerHTML += 'Удаление соседа';
</script>


<div class="dialog">

    <div class="main-title">
        Удалить соседа?
    </div>
    <hr />

    <div class="sub-title">
        Внимание! Будут удалены все чеки и транзакции, связанные с данным соседом!
    </div>
    <hr />

    <dl>
        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dd>
            <img src="@Model.Photo" class="img-responsive" />
        </dd>
    </dl>
    <hr />
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <div class="form-group">
                <div class="col-md-offset-3 ">
                    <input type="submit" value="Удалить" class="card-flat-button delete-button" />
                    <input type="button" value="Отмена" class="card-flat-button" onclick="location.href='@Url.Action("Index")'" />
                </div>
            </div>
        </div>
    }
</div>
