@model System.Collections.Generic.IEnumerable<CheckSaver.Models.Neighbor>

@{
    ViewBag.Title = "Соседи";
}

<h2>Соседи</h2>

<p>
    @Html.ActionLink("Добавить соседа", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            <span class="glyphicon glyphicon-user" aria-hidden="true"></span>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            
            <div class="card-neighbour-photo img-circle" style="background-image: url(@item.Photo);"></div>
            <span class="glyphicon glyphicon-edit" aria-hidden="true"></span> @Html.ActionLink("Редактировать", "Edit", new {id = item.Id}) |
            <span class="glyphicon glyphicon-stats" aria-hidden="true"></span> @Html.ActionLink("Статистика", "Details", new {id = item.Id}) |
            <span class="glyphicon glyphicon-remove" aria-hidden="true"></span> @Html.ActionLink("Удалить", "Delete", new {id = item.Id})
        </td>
    </tr>
}

</table>
