@using System.Globalization
@using CheckSaver.Models
@using CheckSaver.Models.InputModels
@model CheckSaver.Models.InputModels.InvoiceInputModel

@{
    ViewBag.Title = "Создать квитанцию";
    Layout = "~/Views/Shared/_InvoiceLayour.cshtml";

}

<script>
    $('.navbar-brand')[0].innerHTML += '@ViewBag.Title';

    $(function () {
        $('[data-toggle="tooltip"]').tooltip();
    });

    function ReaclculateColdWater(tarifid) {
        var fw = $("#cwf").val();
        var sw = $("#cws").val();
        var res = fw - sw;

        $("#cwd").val(res);

        $.ajax({
            url: "/Invoices/Calculate?difference=" + res + "&tarifId=" + tarifid + "&type=0",
            type: "POST",
            success: function (data) {
                $("#cwc").val(data);
            }
        });
    }


    function ReaclculateHotWater(tarifid) {
        var fw = $("#hwf").val();
        var sw = $("#hws").val();
        var res = fw - sw;

        $("#hwd").val(res);

        $.ajax({
            url: "/Invoices/Calculate?difference=" + res + "&tarifId=" + tarifid + "&type=1",
            type: "POST",
            success: function (data) {
                $("#hwc").val(data);
            }
        });
    }


    function ReaclculateElectricity(tarifid) {
        var fw = $("#elf").val();
        var sw = $("#els").val();
        var res = fw - sw;

        $("#eld").val(res);

        $.ajax({
            url: "/Invoices/Calculate?difference=" + res + "&tarifId=" + tarifid + "&type=2",
            type: "POST",
            success: function (data) {
                $("#elc").val(data);
            }
        });
    }


    function ReaclculateGas(tarifid) {
        var fw = $("#gf").val();
        var sw = $("#gs").val();
        var res = fw - sw;

        $("#gd").val(res);

        $.ajax({
            url: "/Invoices/Calculate?difference=" + res + "&tarifId=" + tarifid + "&type=3",
            type: "POST",
            success: function (data) {
                $("#gc").val(data);
            }
        });
    }
</script>


