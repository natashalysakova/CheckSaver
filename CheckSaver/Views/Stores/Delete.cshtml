@model CheckSaver.Models.Stores

@{
    ViewBag.Title = "Delete";
}

<div class="dialog">

    <div class="main-title">
        Удалить магазин?
    </div>
    <hr />

    <div class="sub-title">
        Внимание! Будут удалены все чеки и цены, связанные с данным магазином!
    </div>
    <hr />
    <dl>
        <dt>
            Название
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Title)
        </dd>

        <dt>
            Адрес
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Address)
        </dd>



        <dd>
            <img src="@Model.Photo" class="img-responsive" />
        </dd>

    </dl>

    <hr />

    @using (Html.BeginForm("Delete", "Stores", FormMethod.Post))
            {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <div class="form-group">
                <div class="col-md-offset-3 ">
                    <input type="submit" value="Удалить" class="card-flat-button delete-button" />
                    <input type="button" value="Отмена" class="card-flat-button" onclick="location.href='@Url.Action("Index")'" />
                </div>
            </div>
        </div>



    }
</div>



